{
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@ui": [
        "src/components/ui"
      ],
      "@context": [
        "src/context"
      ],
      "@utils": [
        "src/utils"
      ],
      "@types": [
        "src/utils/types.js"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@api": [
        "src/api"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@/*": [
        "/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
